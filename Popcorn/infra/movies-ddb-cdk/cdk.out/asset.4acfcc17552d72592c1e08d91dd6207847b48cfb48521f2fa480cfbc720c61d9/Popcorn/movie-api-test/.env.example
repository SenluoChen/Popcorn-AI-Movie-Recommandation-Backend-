# Required
OPENAI_API_KEY=

# Required (local data output root; do NOT commit these files)
# Example:
#   LOCAL_DATA_PATH=C:\\Popcorn-LocalData
LOCAL_DATA_PATH=

# Recommended (richer metadata from OMDb)
OMDB_API_KEY=

# Optional (enables TMDb enrichment: cast/keywords/genres/countries)
TMDB_API_KEY=

# Optional (minimum cosine similarity to consider a result relevant; range -1..1)
# Default is 0.40 if unset.
SIMILARITY_THRESHOLD=0.40

# Optional (only if using: node fetchMovie.js build --dynamodb)
# If you deployed the provided CDK stack, tableName defaults to: reLivre-movies
DDB_TABLE_NAME=reLivre-movies
AWS_REGION=
